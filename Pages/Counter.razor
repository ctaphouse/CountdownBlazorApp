@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="px-4 py-1 text-sm text-mountain-dew bg-purple-600 font-semibold rounded-full border border-red-200" @onclick="IncrementCount">Click me 2</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
